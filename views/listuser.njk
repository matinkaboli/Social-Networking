<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    {% if status == 1 %}
    <title>{{ username }}'s Followings</title>
    {% elif status == 2 %}
    <title>{{ username }}'s Followers</title>
    {% endif %}
  </head>
  <body>
      {% if done %}
        <p>There is nothing anymore.</p>
      {% else %}
      <ul>
      {% for item in list %}
        {% if item != undefined %}
        <li><a href="http://localhost:8080/user/{{ item }}"{{ item }}>{{ item }}</a></li>
        {% endif %}
      {% endfor %}
      </ul>
      {% endif %}
      <form>
        {% if status == 1 %}
        <input type="hidden" name="tab" value="following">
        {% elif status == 2 %}
        <input type="hidden" name="tab" value="follower">
        {% endif %}
        {% if done == false %}
        {% if (numPage - 1) == 0 %}
        {% else %}
        <input type="submit" name="page" value="{{ numPage - 1 }}">
        {% endif %}
        <input type="submit" name="page" value="{{ numPage }}" disabled>
        {% if some == false %}
        <input type="submit" name="page" value="{{ numPage + 1 }}">
        {% endif %}
        {% endif %}
      </form>
  </body>
</html>
